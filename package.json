{
  "name": "yt-audio-api",
  "version": "1.0.0",
  "description": "YouTube audio downloader with yt-dlp",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "mkdir -p bin downloads && wget https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -O ./bin/yt-dlp && chmod +x ./bin/yt-dlp"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
